# Telegram Bot Configuration
OMNI_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OMNI_AUTHORIZED_USER_ID=your_telegram_user_id_here
# Optional: Allow messages from specific chat (for programmatic access via cURL)
# Format: negative number for groups/supergroups (e.g., -1003048532828)
OMNI_TG_AUTH_CHAT_ID=

# Claude API Configuration
OMNI_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude Model Selection (sonnet, opus, haiku)
OMNI_CLAUDE_MODEL=sonnet

# GitHub Authentication (Optional - for git operations)
# Create a fine-grained Personal Access Token at:
# https://github.com/settings/tokens?type=beta
# Required permissions: Contents (Read & Write), Metadata (Read)
GITHUB_TOKEN=ghp_your_github_token_here
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# Logging
OMNI_LOG_LEVEL=INFO

# API Configuration
OMNI_API_ENABLED=true
OMNI_API_PORT=8080
OMNI_API_KEY=your_secret_api_key_here
